<h1>Compte</h1>

<%= form_with(model: @user, url: account_path, method: :patch) do |form| %>
  <%= render partial: "shared/form_errors", locals: {form: form} %>
  <div>
    <%= form.label(:email) %>
    <%= form.text_field(:email, value: @user.email) %>
  </div>
  <div>
    <%= form.label(:current_password) %>
    <%= form.password_field(:current_password) %>
  </div>
  <div>
    <%= form.label(:password) %>
    <%= form.password_field(:password) %>
  </div>
  <div>
    <%= form.label(:password_confirmation) %>
    <%= form.password_field(:password_confirmation) %>
  </div>
  <div>
    <%= form.submit("Mettre Ã  jour les informations") %>
  </div>
<% end %>
